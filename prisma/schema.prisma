// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Staff {
  id           Int        @id @default(autoincrement())
  email        String     @unique
  name         String?
  password     String
  departmentId Int
  questions    Question[]
  department   Department @relation(fields: [departmentId], references: [id])
}

model Department {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  courses  Course[]
  staffs   Staff[]
  students Student[]
}

model Course {
  id           Int          @id @default(autoincrement())
  code         String       @unique
  title        String
  departmentId Int
  questions    Question[]
  department   Department   @relation(fields: [departmentId], references: [id])
  Registery    Registered[]
}

model Question {
  id             Int      @id @default(autoincrement())
  title          String
  courseId       Int
  authorId       Int
  multipleChiose Boolean? @default(false)
  options         Option[]
  course         Course   @relation(fields: [courseId], references: [id])
  author         Staff    @relation(fields: [authorId], references: [id])
}

model Option {
  id         Int      @id @default(autoincrement())
  questionId Int
  isAnswer   Boolean  @default(false)
  question   Question @relation(fields: [questionId], references: [id])
}

model Registered {
  id        Int     @id @default(autoincrement())
  courseId  Int
  studentId Int
  course    Course  @relation(fields: [courseId], references: [id])
  student   Student @relation(fields: [studentId], references: [id])
}

model Student {
  id           Int          @id @default(autoincrement())
  email        String       @unique
  name         String
  departmentId Int
  password     String
  department   Department   @relation(fields: [departmentId], references: [id])
  courses      Registered[]
}
